<p id="notice"><%= notice %></p>

<h1>Listing Todos</h1>

<table>
  <thead>
    <tr>
      <th>Thing</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%=form_tag todos_path,method:"get" do%>
<%=hidden_field_tag :done,true%>
<%=submit_tag "已完成"%>
<% end %>
<%=form_tag todos_path,method:"get" do%>
<%=hidden_field_tag :done,false%>
<%=submit_tag "未完成"%>
<% end %>
<%=form_tag todos_path,method:"get" do%>
<%=hidden_field_tag :done%>
<%=submit_tag "顯示全部"%>
<% end %>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.thing %></td>
        <td><%= todo.done %></td>
        <td><% if todo.done == true %>
        <%= button_to '未完成', done_todo_path(todo), method: :post %>
        <% else  %>
        <%= button_to '已完成', done_todo_path(todo), method: :post %>
<% end %>
</td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
